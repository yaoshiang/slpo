{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Specific Unit Test",
            "type": "debugpy",
            "request": "launch",
            "program": "/usr/local/py-utils/bin/pytest",
            "args": [
                "-v",
                "${file}::${selectedText}",
                // "--pdb"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "sft",
            "type": "debugpy",
            "request": "launch",
            "program": "python",
            "args": [
                "-m", "experiment.sentiment.sft", "+lr=1e-5", "+batch_size=1024"
            ],
            "console": "integratedTerminal"

        }

    ]
}
