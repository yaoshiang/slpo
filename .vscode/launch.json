{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Specific Unit Test",
            "type": "debugpy",
            "request": "launch",
            "program": "/usr/local/py-utils/bin/pytest",
            "args": [
                "-v",
                "${file}::${selectedText}",
                // "--pdb"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
